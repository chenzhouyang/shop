<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yskj.shop">
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 获取网络状态 -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 网络通信-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />  <!-- 获取设备信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /> <!-- 获取MAC地址-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- 读写sdcard，storage等等 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" /> <!-- 允许程序录制音频 -->
    <uses-permission android:name="android.permission.GET_TASKS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/image_app"
        android:label="@string/app_name"
        android:name=".PgyApplication"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:multiprocess="false"
        android:theme="@style/AppTheme">
        <activity android:name=".home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".home.ShoppingMainActivity"/><!--商城主页-->
        <activity android:name=".home.ShoppingCartActivity"/><!--购物车-->
        <activity android:name=".home.GoodsCategoryActivity"/><!--分类-->
        <activity android:name=".home.MineActivity"/><!--我的-->
        <activity android:name=".login.LoginActivity"/><!--登陆-->
        <activity android:name=".ui.CommodityDetailsActivity"/><!--商品详情-->
        <activity android:name=".ui.CitySeletActivity"/><!--城市选择-->
        <activity android:name=".ui.ApproveActivity"/><!--实名认证-->
        <activity android:name=".ui.ChangePasswordActivity"/><!--修改密码-->
        <activity android:name=".ui.ConfirmOrderActivity"/><!--确认订单-->
        <activity android:name=".ui.LocationListActivity"/><!--收货地址-->
        <activity android:name=".ui.LogisticsActivity"/><!--物流信息-->
        <activity android:name=".ui.OrderDetailActivity"/><!--订单详情-->
        <activity android:name=".ui.OrderListActivity"/><!--订单列表-->
        <activity android:name=".ui.PerfectActivity"/><!--收货地址编辑-->
        <activity android:name=".register.RegisterActivity"/><!--收货地址编辑-->
        <activity android:name=".deposit.AddBankActivity"/><!--添加银行卡-->
        <activity android:name=".deposit.BankListActivity"/><!--银行卡列表-->
        <activity android:name=".deposit.DepositActivity"/><!--提现-->
        <activity android:name=".deposit.DepositToBankActivity"/><!--提现到银行卡-->
        <activity android:name=".ui.MainActivity"/><!--积分动态-->
        <activity android:name=".home.SearchActivity"/><!--搜索-->
        <activity android:name=".ui.FansActivity"/><!--粉丝列表-->
        <activity android:name=".ui.BuySoilActivity"/><!--购买土地-->
        <activity android:name=".ui.WalletActivity"/><!--我的钱包-->
        <activity android:name=".ui.AccountsActivity"/><!--转账-->
        <activity android:name=".ui.AccountListActivity"/><!--转账记录-->
        <!-- 必选-->
        <meta-data
            android:name="PGYER_APPID"
            android:value="73c6e2a5e57ea18ada63c80ea53d9b1b" >
        </meta-data>
        <provider android:name="android.support.v4.content.FileProvider"
            android:authorities="15936365921"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths"/>
        </provider>
    </application>

</manifest>